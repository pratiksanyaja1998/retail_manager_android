<?xml version="1.0" encoding="utf-8"?>




<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="invoiceFromHolder"
            type="retailmanager.spyhunter272.com.holder.InvoiceFromHolder" />

    </data>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actBackground"
    tools:context=".activity.InvoiceFromActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageButton
                    android:id="@+id/btn_open_dialog_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:onClick="@{(v) ->invoiceFromHolder.onClick(v)}"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@drawable/calender_ic" />

                <TextView
                    android:id="@+id/tv_show_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{invoiceFromHolder.dateForShow}"
                    android:background="#00000000"
                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="5dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:text="@string/customer_details"
                    android:textColor="@color/fontDark"
                    android:textSize="18sp"
                    />

                <ImageButton
                    android:id="@+id/btn_new_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:tint="@color/colorWhite"
                    android:onClick="onClick"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_person_add_black_24dp"/>


                <ImageButton
                    android:id="@+id/btn_search_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="onClick"
                    android:backgroundTint="@color/colorPrimary"
                    android:src="@drawable/ic_search_black_24dp"/>

            </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorTextGray"
                    ></View>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@color/fontlight"
                        android:text="@{invoiceFromHolder.customer}"
                        android:layout_weight="1"
                        />

                    <ImageButton
                        android:id="@+id/btn_update_customer"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:onClick="onClick"
                        android:layout_margin="8dp"
                        android:background="@android:color/transparent"
                        android:visibility="@{invoiceFromHolder.isUpdateCustomer ?  View.VISIBLE  : View.GONE }"
                        android:src="@drawable/edit_btn"/>

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:text="@string/product_details"
                        android:textSize="18sp"
                        android:textColor="@color/fontDark"
                        />

                    <ImageButton
                        android:id="@+id/btn_search_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:backgroundTint="@color/colorPrimary"
                        android:src="@drawable/ic_search_black_24dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorTextGray"
                    ></View>


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp"
                            android:paddingStart="5dp"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp">

                            <TextView

                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:padding="3dp"
                                android:text="PRODUCT NAME"
                                android:textColor="@color/fontDark"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/row_pqty"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".4"
                                android:padding="3dp"
                                android:text="QTY"
                                android:textColor="@color/fontDark"
                                android:textStyle="bold" />

                            <TextView

                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".8"
                                android:padding="3dp"
                                android:text="RATE"
                                android:textColor="@color/fontDark"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/sp_gsttype"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:entries="@array/textype"
                                android:layout_marginEnd="5dp"
                                tools:ignore="RtlCompat" />

                            <TextView

                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".4"
                                android:padding="3dp"
                                android:text="TOTAL"
                                android:textColor="@color/fontDark"
                                android:textStyle="bold" />


                            <ImageButton
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:padding="3dp"
                                android:textSize="18sp"
                                android:src="@drawable/ic_delete_black_24dp"
                                 />
                        </LinearLayout>


                        <retailmanager.spyhunter272.com.customview.NestedListView
                            android:id="@+id/listproductholder"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">

                        </retailmanager.spyhunter272.com.customview.NestedListView>

                        <!--<LinearLayout-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content">-->

                            <!--<Button-->
                                <!--android:id="@+id/btnaddnewpro"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:text="Add New Products"-->
                                <!--android:onClick="onClick"-->
                                <!--android:textColor="#fff"-->
                                <!--android:textStyle="bold" />-->

                        <!--</LinearLayout>-->
                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:padding="8dp"
                            android:text="Discount (%) : "
                            android:textAlignment="textStart"
                            android:textSize="18sp"
                                android:layout_weight="1"
                            tools:ignore="RtlCompat" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:padding="8dp"
                                android:text="@{invoiceFromHolder.discount+``}"
                                android:textAlignment="textStart"
                                android:textSize="18sp"
                                tools:ignore="RtlCompat" />


                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/seekbar_descount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:onProgressChanged="@{(seekbar, progress, fromUser)-> invoiceFromHolder.setDiscount(progress)}"
                            android:paddingVertical="8dp"
                            />
                        <!--<EditText-->
                            <!--android:id="@+id/ed_descount"-->
                            <!--android:layout_width="50dp"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_weight="1"-->
                            <!--android:ems="10"-->
                            <!--android:inputType="numberDecimal"-->
                            <!--android:selectAllOnFocus="true"-->
                            <!--android:text="@={invoiceFromHolder.discount+``}" />-->

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_total_pro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:padding="8dp"
                        android:text="@={invoiceFromHolder.totalWithDiscount+``, default=Total}"
                        android:textAlignment="textEnd"
                        android:textColor="@color/fontDark"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:paddingVertical="10dp"
                        android:text="@string/other_details"
                        android:textSize="18sp"
                        android:textColor="@color/fontDark"
                        />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorTextGray"
                    ></View>

                <CheckBox
                    android:id="@+id/cb_tprcharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textColor="@color/fontGray"
                    android:checked="@={invoiceFromHolder.tprcharge}"
                    android:text="Tax Reverse Charge"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/sp_ptype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:spinnerMode="dialog"

                    android:selectedItemPosition="@={invoiceFromHolder.paymethord}"
                    android:entries="@array/ptype" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:layout_margin="8dp"
                    android:focusableInTouchMode="true"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:ems="10"
                        android:lines="3"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="@={invoiceFromHolder.description}"
                        android:hint="Description" />

                </android.support.design.widget.TextInputLayout>



                <!--<EditText-->
                    <!--android:id="@+id/eddesc"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginHorizontal="10dp"-->
                    <!--android:layout_marginVertical="5dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:ems="10"-->
                    <!--android:lines="5"-->
                    <!--android:background="@drawable/bg_edt_border"-->
                    <!--android:hint="description ..."-->
                    <!--android:textColor="@color/fontGray"-->
                    <!--android:text="@={invoiceFromHolder.description}"-->
                    <!--android:maxLength="150"-->
                    <!--android:inputType="textMultiLine" />-->

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>

</layout>