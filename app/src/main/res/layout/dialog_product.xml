<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="product"
            type="retailmanager.spyhunter272.in.retailmanager.room.table.Product" />

        <variable
            name="productDialogHolder"
            type="retailmanager.spyhunter272.in.retailmanager.model.ProductDialogHolder" />

    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dialog_root_padding"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ibtn_close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:scaleType="center"
            android:tint="#606060"
            android:src="@drawable/ic_product_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Products Details"
            android:textFontWeight="700"
            android:textSize="22sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#ccc" />

    <FrameLayout
        android:id="@+id/relative_spinner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/components_margin_bottom"
        android:background="@drawable/spinner_border"
        android:orientation="horizontal"
        android:padding="5dp"
       >

        <Spinner
            android:id="@+id/spinner_product_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:selectedItemPosition="@={product.category}"
            tools:listitem="@layout/row_simple_spinner_textview"
            android:spinnerMode="dialog" />


    </FrameLayout>

    <EditText
        android:id="@+id/ed_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/bg_edt_border"
        android:padding="@dimen/ed_padding"
        android:layout_marginBottom="@dimen/components_margin_bottom"
        android:hint="Product Name"
        android:text="@={product.name}"
        android:inputType="textCapWords" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/components_margin_bottom"
        >

    <TextView
        android:id="@+id/tv_product_barcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/bg_edt_border"
        android:padding="@dimen/ed_padding"
        android:textSize="18sp"
        android:layout_weight="1"
        android:visibility="@{productDialogHolder.barcode ? View.VISIBLE : View.GONE }"
        android:layout_marginRight="@dimen/components_margin_left_right"
        android:hint="Product Barcode"
        android:text="@={product.barcode}"
        android:drawableTint="#ccc"
        android:drawableRight="@drawable/ic_dashboard_black_24dp"
         />

        <FrameLayout
            android:id="@+id/relative_spinner_view_gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:visibility="@{productDialogHolder.productGst ? View.VISIBLE : View.GONE }"
            android:padding="5dp"
            >

        <Spinner
            android:id="@+id/spinner_product_gst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:entries="@array/gst_integer"
            android:selectedItemPosition="@={product.gst}"
            android:paddingVertical="10dp"
             />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/components_margin_bottom"
        >


        <EditText
            android:id="@+id/ed_hsn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/components_margin_left_right"
            android:layout_weight="1"
            android:background="@drawable/bg_edt_border"
            android:ems="10"
            android:hint="HSN Code"
            android:visibility="@{productDialogHolder.hsn ? View.VISIBLE : View.GONE }"
            android:text="@={product.hsn}"
            android:inputType="textCapCharacters"
            android:padding="@dimen/ed_padding" />

        <EditText
            android:id="@+id/ed_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/components_margin_left_right"
            android:layout_weight="1"
            android:background="@drawable/bg_edt_border"
            android:ems="10"
            android:hint="Qty"
            android:text="@={product.in_stock_qty+``}"
            android:inputType="numberDecimal"
            android:padding="@dimen/ed_padding" />

        <LinearLayout
            android:id="@+id/linear_add_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{productDialogHolder.update ? View.VISIBLE : View.GONE }"
            android:layout_weight=".8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:padding="5dp"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/ed_qty_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/components_margin_left_right"
            android:layout_weight="1"
            android:background="@drawable/bg_edt_border"
            android:ems="10"
            android:hint="Add Stock"
            android:inputType="number"
            android:padding="@dimen/ed_padding" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/components_margin_bottom"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_buy_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/components_margin_left_right"
            android:layout_weight="1"
            android:visibility="@{productDialogHolder.bprice ? View.VISIBLE : View.GONE }"
            android:background="@drawable/bg_edt_border"
            android:ems="10"
            android:hint="Buy Price"
            android:text="@={product.b_price+``}"
            android:inputType="numberDecimal"
            android:padding="@dimen/ed_padding" />

        <EditText
            android:id="@+id/ed_sell_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/components_margin_left_right"
            android:layout_weight="1"
            android:background="@drawable/bg_edt_border"
            android:ems="10"
            android:text="@={product.s_price+``}"
            android:hint="Sell Price"
            android:inputType="numberDecimal"
            android:padding="@dimen/ed_padding" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/colorWhite"
            android:padding="@dimen/button_padding"
            android:text="save" />

        <Button
            android:id="@+id/btn_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:padding="@dimen/button_padding"
            android:backgroundTint="@color/colorButtonCancel"
            android:text="cancel" />

    </LinearLayout>


</LinearLayout>

</layout>