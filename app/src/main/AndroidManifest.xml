<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="retailmanager.spyhunter272.com">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/edit_btn" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <activity
            android:name="retailmanager.spyhunter272.com.activity.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="retailmanager.spyhunter272.com.activity.CustomerActivity"
            android:label="@string/customer"
            android:parentActivityName="retailmanager.spyhunter272.com.activity.HomeActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="retailmanager.spyhunter272.com.activity.ProductActivity"
            android:label="@string/products"
            android:parentActivityName="retailmanager.spyhunter272.com.activity.HomeActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="retailmanager.spyhunter272.com.activity.BarcodeActivity"
            android:label="@string/barcode_scanner"
            android:screenOrientation="portrait" />
        <activity
            android:name="retailmanager.spyhunter272.com.activity.CaptureActivityPortrait"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="retailmanager.spyhunter272.com.activity.InvoiceActivity"
            android:label="@string/invoice"
            android:parentActivityName="retailmanager.spyhunter272.com.activity.HomeActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="retailmanager.spyhunter272.com.activity.InvoiceFromActivity"
            android:label="@string/invoice_form_label"
            android:parentActivityName="retailmanager.spyhunter272.com.activity.InvoiceActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />


        <activity android:name="retailmanager.spyhunter272.com.activity.RetailInformationActivity"
            android:parentActivityName="retailmanager.spyhunter272.com.activity.HomeActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:label="@string/retail_info_label"
            />

        <service android:name="retailmanager.spyhunter272.com.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="30b5e476961cc09bd99a99994e3cd5fcb6692df3" />

    </application>

</manifest>